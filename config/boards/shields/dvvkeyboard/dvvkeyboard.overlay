#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix-transform = &default_transform;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        
        // 5 рядов
        // row-gpios = <&gpio1 20 GPIO_ACTIVE_HIGH>,
        //             <&gpio1 19 GPIO_ACTIVE_HIGH>,
        //             <&gpio1 18 GPIO_ACTIVE_HIGH>,
        //             <&gpio1 15 GPIO_ACTIVE_HIGH>,
        //             <&gpio1 14 GPIO_ACTIVE_HIGH>;

        // 7 столбцов
        // col-gpios = <&gpio0 5 GPIO_ACTIVE_HIGH>,
        //             <&gpio1 6 GPIO_ACTIVE_HIGH>,
        //             <&gpio1 7 GPIO_ACTIVE_HIGH>,
        //             <&gpio1 8 GPIO_ACTIVE_HIGH>,
        //             <&gpio1 9 GPIO_ACTIVE_HIGH>,
        //             <&gpio1 16 GPIO_ACTIVE_HIGH>,
        //             <&gpio1 10 GPIO_ACTIVE_HIGH>;

        /* 5 рядов: D5–D9 => P0.24, P1.00, P0.11, P1.04, P1.06 */
        row-gpios = 
            <&promicro 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,  // D5
            <&promicro 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,  // D6
            <&promicro 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,  // D7
            <&promicro 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,  // D8
            <&promicro 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;  // D9

        /* 7 столбцов: D10, D16, D14, D15, D18, D19, D20 */
        col-gpios = 
            <&promicro 15 GPIO_ACTIVE_HIGH>,  // D15 - столбец 1 (TAB)
            <&promicro 16 GPIO_ACTIVE_HIGH>,  // D16 - столбец 2 (Q)
            <&promicro 14 GPIO_ACTIVE_HIGH>,  // D14 - столбец 3 (W)
            <&promicro 10 GPIO_ACTIVE_HIGH>,  // D10 - столбец 4 (E)
            <&promicro 18 GPIO_ACTIVE_HIGH>,  // D18 - столбец 5 (R)
            <&promicro 19 GPIO_ACTIVE_HIGH>,  // D19 - столбец 6 (T)
            <&promicro 20 GPIO_ACTIVE_HIGH>;  // D20 - столбец 7 (пустой)
    };

    default_transform: matrix_transform {
        compatible = "zmk,matrix-transform";
        rows = <5>;
        columns = <7>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5) RC(3,6)
            RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,5) RC(4,6)
        >;
    };
};